@page
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal;
@model SW.schedulity.Web.Pages.Admin.Sections.EditModalModel
@{
    Layout = null;
}

<form asp-page="/Admin/Sections/EditModal">
    <abp-modal>
        <abp-modal-header title="Edit"></abp-modal-header>
        <abp-modal-body>
            <input hidden asp-for="Id" />
            <abp-input asp-for="Section.Title" />
            <abp-input asp-for="Section.NumberOfHours" min="0" step="3" />
            <abp-input asp-for="Section.order" min="0" />
            <abp-select asp-for="Section.SectionType" />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>
